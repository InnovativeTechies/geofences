<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Pages.HomePage">
    <TabbedPage.Children>

        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="History" BindingContext="{Binding History}">
                    <ContentPage.ToolbarItems>
                        <ToolbarItem Text="" Command="{Binding}" />
                    </ContentPage.ToolbarItems>

                    <ContentPage.Content>
                        <ListView>

                        </ListView>
                    </ContentPage.Content>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>

        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Settings" BindingContext="{Binding Settings}">
                    <ContentPage.ToolbarItems>
                        <ToolbarItem Text="Stop All" Command="{Binding}" />
                    </ContentPage.ToolbarItems>

                    <ContentPage.Content>

                    </ContentPage.Content>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>

    </TabbedPage.Children>
</TabbedPage>